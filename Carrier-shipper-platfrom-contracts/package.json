{
  "name": "laneaxis-smartcontracts",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Laneaxis",
  "main": "output/lib/index.js",
  "scripts": {
    "clean": "rm -rf ./output",
    "clean:compile": "rm -rf ./types/truffle-contracts",
    "clean:build": "rm -rf ./output/migrations && rm -rf ./output/scripts && rm -rf ./output/lib && rm -rf ./output/utils && rm -f tsconfig.tsbuildinfo",
    "clean:lib": "rm -rf ./src/lib/generated",
    "compile": "yarn clean:compile && yarn truffle compile && typechain --target=truffle-v5 'output/artifacts/*.json'",
    "compile:lib": "yarn clean:lib && npx typechain --target ./node_modules/@pixelplex/typechain-web3-v1-simplified --outDir=src/lib/generated 'output/artifacts/!(Mocked)*.json'",
    "build": "yarn clean:build && ttsc --build && npx cpy 'lib/**/*.d.ts' '../output' --cwd src --parents",
    "verify:kovan": "NODE_APP_INSTANCE=kovan truffle run verify --network kovan --license MIT",
    "verify:mainnet": "NODE_ENV=production NODE_APP_INSTANCE=mainnet truffle run verify --network mainnet --license MIT",
    "verify:bsc:testnet": "NODE_APP_INSTANCE=bsc-testnet truffle run verify --network bscTestnet --license MIT",
    "verify:bsc:mainnet": "NODE_ENV=production NODE_APP_INSTANCE=bsc-mainnet truffle run verify --network bscMainnet --license MIT",
    "migrate": "yarn build && truffle migrate",
    "migrate:kovan": "NODE_APP_INSTANCE=kovan yarn migrate --network kovan",
    "migrate:mainnet": "NODE_ENV=production NODE_APP_INSTANCE=mainnet yarn migrate --network mainnet",
    "migrate:bsc:testnet": "NODE_APP_INSTANCE=bsc-testnet yarn migrate --network bscTestnet",
    "migrate:bsc:mainnet": "NODE_ENV=production NODE_APP_INSTANCE=bsc-mainnet yarn migrate --network bscMainnet",
    "test": "NODE_APP_INSTANCE=test truffle --config src/tests/truffle-config.js test ./src/tests/*/index.ts",
    "exec:mint": "yarn build && truffle exec output/scripts/mint.js",
    "exec:mint:kovan": "yarn exec:mint --network kovan",
    "coverage": "NODE_APP_INSTANCE=test truffle --config src/tests/truffle-config.js run coverage --file=./src/tests/*/index.ts",
    "lint": "solhint -f table ./contracts/**/*.sol"
  },
  "peerDependencies": {
    "web3": "^1.0.0"
  },
  "dependencies": {
    "@eth-optimism/contracts": "^0.3.2",
    "@eth-optimism/solc": "^0.6.12-alpha.1",
    "@openzeppelin/contracts": "3.1.0",
    "@uniswap/v3-periphery": "^1.0.1",
    "bn.js": "^4.11.9",
    "hardhat": "^2.3.0",
    "web3": "^1.3.6"
  },
  "devDependencies": {
    "@pixelplex/typechain-web3-v1-simplified": "^0.0.2-test",
    "@truffle/hdwallet-provider": "1.2.6",
    "@typechain/truffle-v5": "2.0.2",
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "config": "^3.3.2",
    "copyfiles": "^2.4.1",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.25.0",
    "eth-gas-reporter": "^0.2.20",
    "openzeppelin-solidity": "^3.2.0",
    "prettier": "^2.1.1",
    "prettier-plugin-solidity": "1.0.0-alpha.57",
    "solhint": "^3.2.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.11",
    "solowei": "^0.1.4",
    "truffle": "5.3.0",
    "truffle-plugin-verify": "^0.5.0",
    "ts-node": "^9.1.1",
    "ttypescript": "^1.5.12",
    "typechain": "2.0.0",
    "typechain-target-truffle": "1.0.2",
    "typescript": "^4.2.2"
  }
}
