{
  "name": "staking_smartcontracts",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Pixelplex inc.",
  "scripts": {
    "clean": "rm -rf ./build && rm -rf ./types/truffle-contracts",
    "compile": "yarn clean && truffle compile && typechain --target=truffle-v5 'build/contracts/*.json'",
    "build": "rm -rf ./dist && rm -f tsconfig.tsbuildinfo && ttsc",
    "verify:kovan": "NODE_APP_INSTANCE=kovan truffle run verify --network kovan --license MIT",
    "verify:mainnet": "NODE_ENV=production NODE_APP_INSTANCE=mainnet truffle run verify --network mainnet --license MIT",
    "migrate": "yarn build && truffle migrate",
    "migrate:kovan": "NODE_APP_INSTANCE=kovan yarn migrate --network kovan",
    "migrate:mainnet": "NODE_ENV=production NODE_APP_INSTANCE=mainnet yarn migrate --network mainnet",
    "test": "yarn build && NODE_APP_INSTANCE=test truffle test ./dist/tests/index.js",
    "coverage": "yarn build && NODE_APP_INSTANCE=test truffle run coverage --file=./dist/tests/index.js",
    "lint": "solhint -f table 'contracts/**/*.sol' && prettier --list-different ./contracts/*",
    "lint:fix": "solhint -f table 'contracts/**/*.sol' && prettier --write ./contracts/*"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.0",
    "@openzeppelin/contracts": "^3.4.1-solc-0.7-2",
    "@truffle/hdwallet-provider": "^1.1.1",
    "config": "^3.3.2",
    "solowei": "^0.1.3",
    "truffle": "^5.1.50",
    "truffle-plugin-verify": "^0.5.0"
  },
  "devDependencies": {
    "@typechain/truffle-v5": "2.0.2",
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "eth-gas-reporter": "^0.2.20",
    "openzeppelin-solidity": "^3.2.0",
    "prettier": "^2.1.1",
    "prettier-plugin-solidity": "1.0.0-alpha.57",
    "solhint": "^3.2.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.11",
    "ttypescript": "^1.5.12",
    "typechain": "2.0.0",
    "typechain-target-truffle": "1.0.2",
    "typescript": "^4.1.2"
  }
}
